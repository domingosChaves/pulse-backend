# Exemplo de variáveis de ambiente para execução em EC2 (Docker)
# Renomeie para .env e ajuste os valores conforme seu ambiente.

# JWT
AUTH_JWT_SECRET=troque-me
AUTH_JWT_EXP_SECONDS=3600
AUTH_JWT_REFRESH_EXP_SECONDS=2592000

# CORS / OAuth (defina usando IP público do FRONTEND)
CORS_ALLOWED_ORIGINS=http://<IP_PUBLICO_FRONT>
OAUTH_ALLOWED_REDIRECTS=http://<IP_PUBLICO_FRONT>/auth/callback

# OAuth Providers (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Banco de dados (opcional; se não definido, usa H2 em memória)
SPRING_DATASOURCE_URL=
SPRING_DATASOURCE_USERNAME=
SPRING_DATASOURCE_PASSWORD=

# Porta do backend (padrão 8081)
SERVER_PORT=8081

